---
import "../styles/global.css";
import { Image } from 'astro:assets';
import MarbuIcon from '../assets/icons/logo.svg';
import AboutIcon from '../assets/icons/about.svg';
import ProductsIcon from '../assets/icons/buy.svg';
import ContactIcon from '../assets/icons/contact.svg';

---
<header class="
    flex flex-wrap items-center justify-between
    p-5 w-full h-auto bg-gradient-to-r from-gradiant-2 to-gradiant-1 text-white
">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-3">
        <Image src={MarbuIcon} alt="Marbu Home Logo" class="w-12 h-12" loading="eager"/>
        <nav class="text-xl sm:text-3xl font-semibold">Marbu Home</nav>
    </a>

    <!-- MenÃº -->
    <ul class="flex flex-col sm:flex-row sm:gap-5 gap-3 text-lg sm:text-xl font-semibold mt-4 sm:mt-0">
        <li class="transition-all duration-300 transform hover:scale-105">
            <a href="#about" class="hover:text-gray-300 hover:underline">
                <Image src={AboutIcon} alt="Sobre Nosotros" title="Sobre Nosotros" class="w-5 h-5 sm:w-6 sm:h-6 inline" loading="eager"/>
                Sobre Nosotros
            </a>
        </li>
        <li class="transition-all duration-300 transform hover:scale-105">
            <a href="#products" class="hover:text-gray-300 hover:underline">
                <Image src={ProductsIcon} alt="Productos" title="Productos" class="w-5 h-5 sm:w-6 sm:h-6 inline" loading="eager"/>
                Productos
            </a>
        </li>
        <li class="transition-all duration-300 transform hover:scale-105">
            <a href="#contact" class="hover:text-gray-300 hover:underline">
                <Image src={ContactIcon} alt="Contactanos" title="Contactanos" class="w-5 h-5 sm:w-6 sm:h-6 inline" loading="eager"/>
                Contactanos
            </a>
        </li>
    </ul>
</header>

